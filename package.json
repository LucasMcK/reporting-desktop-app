{
  "name": "reporting-desktop-app",
  "version": "1.0.0",
  "description": "Reporting application for Avalon Oil & Gas Ltd.",
  "main": "main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "node publish.js",
    "dev": "concurrently \"npm:dev-renderer\" \"npm:dev-electron\"",
    "dev-renderer": "cd renderer && npm run dev",
    "dev-electron": "wait-on http://localhost:5173 && electron .",
    "start": "electron .",
    "build": "vite build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LucasMcK/reporting-desktop-app.git"
  },
